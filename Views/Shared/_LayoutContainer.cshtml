                    <div class="logo-title">
                        <span class="text-primary text-uppercase">NHASACHTV</span>
                    </div>
                </a>
            </div>
            <div id="sidebar-scrollbar">
                <nav class="iq-sidebar-menu">
                    <ul id="iq-sidebar-toggle" class="iq-menu">

                        <li>
                            <a href="#ui-elements" class="iq-waves-effect collapsed" data-toggle="collapse" aria-expanded="false"><i class="lab la-elementor iq-arrow-left"></i><span>Danh mục sản phẩm</span><i class="ri-arrow-right-s-line iq-arrow-right"></i></a>
                            <ul id="ui-elements" class="iq-submenu collapse" data-parent="#iq-sidebar-toggle">
                                @if (Session["Cates"] != null)
                                {
                                    // Ép kiểu danh sách từ Session
                                    var categories = (List<SellBookStore.Models.Catetory>)Session["Cates"];

                                    // Duyệt qua từng phần tử trong danh sách và hiển thị
                                    foreach (var category in categories)
                                    {

                                        <li class="elements">

                                            <a class="iq-waves-effect collapsed" href="@Url.Action("Index", "SanPhamTheoLoai", new { maloai = category.CateId })">@category.Title</a>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <p>No categories available.</p>
                                }
                            </ul>
                        </li>

                    </ul>
                </nav>
            </div>
